{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/complex-user.schema.json",
  "title": "Complex User",
  "description": "A complex user schema with nested objects, arrays, and various constraints",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for the user",
      "type": "integer",
      "minimum": 1,
      "maximum": 1000000
    },
    "profile": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[A-Za-z\\s]+$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "age": {
          "type": "integer",
          "minimum": 0,
          "maximum": 150
        },
        "website": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["name", "email"]
    },
    "addresses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["home", "work", "billing", "shipping"]
          },
          "street": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "city": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100
          },
          "zipCode": {
            "type": "string",
            "pattern": "^[0-9]{5}(-[0-9]{4})?$"
          },
          "coordinates": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "number",
                "minimum": -90,
                "maximum": 90
              },
              "longitude": {
                "type": "number",
                "minimum": -180,
                "maximum": 180
              }
            },
            "required": ["latitude", "longitude"]
          }
        },
        "required": ["type", "street", "city"]
      },
      "minItems": 1,
      "maxItems": 5
    },
    "preferences": {
      "type": "object",
      "properties": {
        "notifications": {
          "type": "boolean"
        },
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"],
          "default": "auto"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
          },
          "uniqueItems": true,
          "minItems": 1,
          "maxItems": 10
        }
      }
    },
    "accountStatus": {
      "type": "string",
      "enum": ["active", "inactive", "suspended", "pending"],
      "default": "pending"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "lastLoginDate": {
      "type": "string",
      "format": "date"
    },
    "sessionId": {
      "type": "string",
      "format": "uuid"
    }
  },
  "required": ["id", "profile", "accountStatus", "createdAt"]
} 