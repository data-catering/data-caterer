{
  "name": "data-caterer-ui-tests",
  "version": "1.0.0",
  "description": "Unit tests for Data Caterer UI JavaScript",
  "scripts": {
    "pretest": "cp ../../main/resources/ui/data-transformers.js .",
    "test": "jest",
    "test:watch": "npm run pretest && jest --watch",
    "test:coverage": "npm run pretest && jest --coverage",
    "posttest": "rm -f data-transformers.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "mjs"],
    "transform": {
      ".+\\.(js|mjs)$": "babel-jest"
    },
    "transformIgnorePatterns": [],
    "setupFilesAfterEnv": ["./setup.js"],
    "testMatch": ["**/*.test.js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }]
    ]
  }
}

